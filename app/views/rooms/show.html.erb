<%= form_tag("/message", method: "post") do %>
  <%= hidden_field_tag(:room_id, @room.id) %>
  <%= label_tag(:messagebox, "messagebox") %>
  <%= text_field_tag(:messagebox) %>
  <%= submit_tag("send") %>
<% end %>

<% @chats.each do |chat| %>
  <%= chat.message %>
<% end %>
